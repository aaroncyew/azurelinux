[Unit]
Description=Generate Kata appliance image for host kernel

[Service]
Type=oneshot
ExecStart=/usr/libexec/kata-containers/osbuilder/kata-osbuilder.sh -c -k kernel-uvm -i
ExecReload=/usr/libexec/kata-containers/osbuilder/kata-osbuilder.sh -c -k kernel-uvm -i

[Install]
WantedBy=kubelet.service
